@model MezoExperts.Models.LoginModel

@using (Html.BeginForm("Login", "Account",FormMethod.Post))
{
    @Html.AntiForgeryToken()


    <div class="modal fade" id="loginNewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <h2>Login</h2>
                            <hr class="star-primary">
                            <p>Fill the following details to login to your account.</p>
                            @*<form role="form">*@

                            <div class="form-group">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Email Address", @class = "form-control", type = "email" })
                                    @*<input type="text" class="form-control" id="uLogin" placeholder="Login">*@
                                    <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>

                                </div>
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div> <!-- /.form-group -->
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                                    @*<input type="password" class="form-control" id="uPassword" placeholder="Password">*@
                                    <label for="uPassword" class="input-group-addon glyphicon glyphicon-lock"></label>
                                </div> <!-- /.input-group -->
                                @Html.ValidationMessageFor(m => m.Password)
                            </div> <!-- /.form-group -->
                            <div class="checkbox">
                                <label>
                                    @*<input type="checkbox">*@
                                    @Html.CheckBoxFor(m => m.RememberMe) Remember me
                                </label>
                            </div> <!-- /.checkbox -->

                            <input type="submit" class="btn btn-success" value="Login" />

                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
                        </div>
                        <p class="error">@TempData["LoginError"]</p>
                    </div>


                </div>
            </div>

        </div>
    </div>

}

        