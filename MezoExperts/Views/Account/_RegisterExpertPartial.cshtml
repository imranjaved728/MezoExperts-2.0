@model MezoExperts.Models.ExpertRegisterModel

@using (Html.BeginForm("RegisterExpert", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()



    <div class="modal fade" id="registerExpertModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <div class="row ">

                        <div class="col-md-8 col-md-offset-2">
                            <h2>Sign Up</h2>
                            <hr class="star-primary">

                            @*<form role="form">*@
                            <div class="form-group input-group">
                                @Html.Label("Personal Information")
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", @class = "form-control" })
                                    @*<input type="text" class="form-control" id="uLogin" placeholder="Login">*@
                                    <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>

                                </div>
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @class = "form-control" })
                                    @*<input type="text" class="form-control" id="uLogin" placeholder="Login">*@
                                    <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>

                                </div>
                                @Html.ValidationMessageFor(m => m.LastName)
                            </div>
                           
                        
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker1'>
                                @Html.TextBoxFor(m => m.DOB, new { placeholder = "Date of Birth", @class = "form-control" })
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                         </div>

                          
                            <div class="form-group input-group">
                                @Html.Label("Login Information")
                            </div>


                            <div class="form-group">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username", @class = "form-control" })
                                    @*<input type="text" class="form-control" id="uLogin" placeholder="Login">*@
                                    <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>

                                </div>
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>


                            <div class="form-group">
                                <div class="input-group">
                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email Address", @class = "form-control", type = "email" })
                                    @*<input type="text" class="form-control" id="uLogin" placeholder="Login">*@
                                    <label for="uLogin" class="input-group-addon glyphicon glyphicon-user"></label>

                                </div>
                                @Html.ValidationMessageFor(m => m.Email)
                            </div> <!-- /.form-group -->

                            <div class="form-group">
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                                    @*<input type="password" class="form-control" id="uPassword" placeholder="Password">*@
                                    <label for="uPassword" class="input-group-addon glyphicon glyphicon-lock"></label>
                                </div> <!-- /.input-group -->
                                @Html.ValidationMessageFor(m => m.Password)
                            </div> <!-- /.form-group -->

                            <div class="form-group">
                                <div class="input-group">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                                    @*<input type="password" class="form-control" id="uPassword" placeholder="Password">*@
                                    <label for="uPassword" class="input-group-addon glyphicon glyphicon-lock"></label>
                                </div> <!-- /.input-group -->
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div> <!-- /.form-group -->
                            <br />
                            <input type="submit" class="btn btn-success" value="Sign Up" />

                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
                        </div>
                        <p class="error">@TempData["ExpertRegisterError"]</p>
                    </div>


                </div>
            </div>

        </div>
    </div>



}