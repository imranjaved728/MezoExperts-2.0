@model IEnumerable<MezoExperts.Models.Reply>

@{
    ViewBag.Title = "Index";
    Layout = null;
}


<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReplierId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Response)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReplierId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Response)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
        </tr>
    }

</table>
